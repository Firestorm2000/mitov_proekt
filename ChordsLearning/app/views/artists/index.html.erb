<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Id artist</th>
      <th>Song</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.name %></td>
        <td><%= artist.id_artist %></td>
        <td><%= artist.song.name %></td>
        <td><%= link_to 'Show', artist, class: :btn %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist), class: :btn %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' }, class: :btn %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path, class: :btn %>
