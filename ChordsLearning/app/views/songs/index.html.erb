<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Capo</th>
      <th>Strumming</th>
      <th>Chords</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.name %></td>
        <td><%= song.artist %></td>
        <td><%= song.capo %></td>
        <td><%= song.strumming %></td>
        <td><%= song.chords %></td>
        <td><%= song.user.email %></td>
        <td><%= link_to 'Show', song ,class: :btn%></td>
        <td><%= link_to 'Edit', edit_song_path(song),class: :btn %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } ,class: :btn%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song', new_song_path,class: :btn %>
