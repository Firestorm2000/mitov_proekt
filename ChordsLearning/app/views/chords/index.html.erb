<%= stylesheet_link_tag "chords" %>
<p id="notice"><%= notice %></p>

<h1>Chords</h1>

<table class="table table-dark">
  <thead>
    <tr>
      <th>Chord</th>
    </tr>
  </thead>

  <tbody>
    <% @chords.each do |chord| %>
      <tr>
        <td id="chord"><%= chord.chord %></td>
        <td><%= link_to 'Show', chord ,class: :btn%></td>
        <td><%= link_to 'Edit', edit_chord_path(chord),class: :btn %></td>
        <td><%= link_to 'Destroy', chord, method: :delete, data: { confirm: 'Are you sure?' },class: :btn %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chord', new_chord_path,class: :btn %>
